<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainCardView" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_marginHorizontal">@dimen/main_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/main_card_margin_top</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/main_card_corner_radius</item>
    </style>
    <style name="mainTextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:drawablePadding">@dimen/main_padding</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="settingsTextView">
        <item name="android:paddingVertical">@dimen/settings_padding_vertical</item>
        <item name="android:paddingStart">@dimen/settings_padding_start</item>
        <item name="android:paddingEnd">@dimen/settings_padding_end</item>
        <item name="android:text">@string/night_theme</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="settingsSwitch">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/settings_padding_start</item>
        <item name="android:paddingVertical">@dimen/settings_padding_vertical</item>
        <item name="android:text">@string/night_theme</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
    </style>
    <style name="MySwitch">
        <item name="colorControlActivated">@color/blue</item>
    </style>
</resources>