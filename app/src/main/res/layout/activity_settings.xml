<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_to_black"
    android:orientation="vertical"
    tools:context=".ui.settings.SettingsActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/settings"
        app:titleTextColor="@color/settings_toolbar_color" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_theme"
        style="@style/settingsSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/MySwitch" />

    <TextView
        android:id="@+id/share_tv"
        style="@style/settingsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/share_app"
        app:drawableEndCompat="@drawable/ic_share" />

    <TextView
        android:id="@+id/support_tv"
        style="@style/settingsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/support"
        app:drawableEndCompat="@drawable/ic_support" />

    <TextView
        android:id="@+id/agree_tv"
        style="@style/settingsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_agree"
        app:drawableEndCompat="@drawable/ic_user_agree" />
</LinearLayout>
